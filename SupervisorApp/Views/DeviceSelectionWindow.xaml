<Window x:Class="SupervisorApp.Views.DeviceSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:vm="clr-namespace:SupervisorApp.ViewModels"
        xmlns:converters="clr-namespace:SupervisorApp.Converters"
        xmlns:common="clr-namespace:SupervisorApp.Core.Common"
        xmlns:helpers="clr-namespace:SupervisorApp.Helpers"
        mc:Ignorable="d" 
        Title="SupervisorApp" 
        Height="800" Width="900"
        MinHeight="500" MinWidth="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
        Icon="/Resources/SY16a32a48a256.ico">

    <d:Window.DataContext>
        <vm:DeviceSelectionViewModel />
    </d:Window.DataContext>

    <Window.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource ButtonStyle}"/>
        <Style TargetType="ListBox" BasedOn="{StaticResource {x:Type ListBox}}"/>
        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}"/>
        <Style TargetType="ScrollViewer" BasedOn="{StaticResource ScrollViewerStyle}"/>

        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <DataTemplate x:Key="DeviceItemTemplate">
            <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" 
                    Margin="5" Padding="10" Background="White"
                    MinHeight="120" MinWidth="200">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                <Setter Property="BorderBrush" Value="DodgerBlue"/>
                                <Setter Property="BorderThickness" Value="2"/>
                                <Setter Property="Background" Value="AliceBlue"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsAvailable}" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                                <Setter Property="BorderBrush" Value="Gray"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Device List -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="{Binding IconPath}" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <StackPanel>
                            <TextBlock Text="{Binding DisplayName}" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="{Binding Model}" FontSize="10" Foreground="Gray"/>
                        </StackPanel>
                        <Border Background="Orange" CornerRadius="3" Padding="4,2" Margin="5,0"
                                Visibility="{Binding IsRecommended, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="⭐" Foreground="White" FontWeight="Bold"/>
                        </Border>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="1" Margin="0,0,0,5">
                        <TextBlock Text="{Binding Manufacturer}" FontSize="11" Foreground="DarkBlue"/>
                        <TextBlock Text="{Binding Protocol, StringFormat=Protocol: {0}}" FontSize="10" Foreground="Gray"/>
                    </StackPanel>
                    
                    <TextBlock Grid.Row="2" Text="{Binding Description}" 
                               FontSize="10" Foreground="DarkGreen" 
                               TextWrapping="Wrap" VerticalAlignment="Top"/>
                    
                    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,5,0,0">
                        <Ellipse Width="8" Height="8" VerticalAlignment="Center" Margin="0,0,5,0">
                            <Ellipse.Style>
                                <Style TargetType="Ellipse">
                                    <Setter Property="Fill" Value="Red"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsAvailable}" Value="True">
                                            <Setter Property="Fill" Value="Green"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Ellipse.Style>
                        </Ellipse>
                        <TextBlock Text="{Binding StatusMessage}" FontSize="9" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="DarkBlue" Padding="15,10">
            <StackPanel>
                <TextBlock Text="SupervisorApp - Device Selection" 
                           FontSize="18" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Select the device and load it." 
                           FontSize="12" Foreground="LightGray" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" MinWidth="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*" MinWidth="250"/>
            </Grid.ColumnDefinitions>

            <GroupBox Grid.Column="0" Header="Device List" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="Refreash Device" Command="{Binding RefreshDevicesCommand}"
                                Padding="8,4"/>
                        <TextBlock Text="{Binding AvailableDevices.Count, StringFormat=Available: {0}}" 
                                   VerticalAlignment="Center" Margin="15,0,0,0" Foreground="Gray"/>
                    </StackPanel>
                    
                    <ListBox Grid.Row="1" ItemsSource="{Binding AvailableDevices}"
                             SelectedItem="{Binding SelectedDevice}"
                             ItemTemplate="{StaticResource DeviceItemTemplate}"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                    </ListBox>
                </Grid>
            </GroupBox>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" 
                          Background="LightGray" ResizeBehavior="PreviousAndNext"/>

            <StackPanel Grid.Column="2" Margin="10,0,0,0">
                
                <GroupBox Header="Device Info" Margin="0,0,0,15">
                    <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                        <TextBlock Text="{Binding DeviceDetails}" 
                                   FontFamily="Consolas" FontSize="11"
                                   Background="WhiteSmoke" Padding="10"
                                   TextWrapping="Wrap"/>
                    </ScrollViewer>
                </GroupBox>

                <GroupBox Header="Connection Test" Margin="0,0,0,15">
                    <StackPanel>
                        <Button Content="Test Connection" Command="{Binding TestConnectionCommand}"
                                Padding="10,8" Margin="0,0,0,10"
                                IsEnabled="{Binding IsConnecting, Converter={StaticResource InverseBooleanConverter}}"/>
                        
                        <TextBlock Text="{Binding ConnectionStatus}" 
                                   FontWeight="Bold" TextWrapping="Wrap"
                                   HorizontalAlignment="Center"/>
                        
                        <ProgressBar IsIndeterminate="{Binding IsConnecting}" 
                                     Height="4" Margin="0,10,0,0"
                                     Visibility="{Binding IsConnecting, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="List Info">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Available:" FontWeight="Bold" Width="80"/>
                            <TextBlock Text="{Binding AvailableDevices.Count}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Index:" FontWeight="Bold" Width="80"/>
                            <TextBlock Text="1"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Selected:" FontWeight="Bold" Width="80"/>
                            <TextBlock Text="{Binding SelectedDevice.DisplayName}" Foreground="DarkBlue"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </Grid>

        <Border Grid.Row="2" Background="LightGray" Padding="20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" Command="{Binding CancelCommand}"
                        Padding="15,8" MinWidth="120" FontWeight="Bold"/>
                <Button Content="Confirm" Command="{Binding ConfirmSelectionCommand}"
                        Padding="15,8" MinWidth="120" FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Height="200">
            <TextBox x:Name="LogTextBox"
                     Text="{Binding Source={x:Static common:LogService.Instance}, Path=LogText, Mode=OneWay}"
                     helpers:ScrollToEndBehavior.AutoScrollToEnd="True"
                     IsReadOnly="True"
                     FontFamily="Consolas"
                     FontSize="11"
                     Background="Black"
                     Foreground="LightGreen"
                     Padding="5"
                     TextWrapping="NoWrap"
                     VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch">
            </TextBox>
        </ScrollViewer>
    </Grid>
</Window>