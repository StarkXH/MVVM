<Application x:Class="MVVMLightLearning.App" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
            xmlns:vm="clr-namespace:MVVMLightLearning.ViewModels"
            xmlns:local="clr-namespace:MVVMLightLearning.Converters"
            StartupUri="Views/MainWindow.xaml">  
   <Application.Resources>  
       <ResourceDictionary>
            <local:StringToIntConverter x:Key="StringToIntConverter"/>
            <!-- 注册全局的 ViewModelLocator -->  
           <vm:ViewModelLocator x:Key="Locator" />  
           <!-- 定义一些样式 -->  
           <Style x:Key="TitleTextStyle" TargetType="TextBlock">  
             <Setter Property="FontSize" Value="20" />  
             <Setter Property="FontWeight" Value="Bold" />  
             <Setter Property="HorizontalAlignment" Value="Center" />  
             <Setter Property="Margin" Value="0,10" />  
           </Style>  
           <Style x:Key="CounterTextStyle" TargetType="TextBlock">  
             <Setter Property="FontSize" Value="24" />  
             <Setter Property="FontWeight" Value="Bold" />  
             <Setter Property="HorizontalAlignment" Value="Center" />  
             <Setter Property="Foreground" Value="Blue" />  
           </Style>  
           <Style x:Key="ActionButtonStyle" TargetType="Button">  
             <Setter Property="Padding" Value="20,10" />  
             <Setter Property="Margin" Value="5" />  
             <Setter Property="FontSize" Value="14" />  
             <Setter Property="MinWidth" Value="100" />  
           </Style>  
       </ResourceDictionary>  
   </Application.Resources>  
</Application>