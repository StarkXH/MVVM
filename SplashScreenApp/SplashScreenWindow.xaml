<Window x:Class="SplashScreenApp.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SplashScreenApp"
        mc:Ignorable="d"
        Title="SplashScreen" 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Width="800" Height="500"
        WindowStartupLocation="CenterScreen"
        Topmost="True">

    <Window.Resources>
        <!-- 动画资源 -->
        <Storyboard x:Key="GlowAnimation" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.BlurRadius)" Storyboard.TargetName="glowBorder">
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="15"/>
                <EasingDoubleKeyFrame KeyTime="0:0:1" Value="25"/>
                <EasingDoubleKeyFrame KeyTime="0:0:1.5" Value="15"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)" Storyboard.TargetName="glowBorder">
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="0.7"/>
                <EasingDoubleKeyFrame KeyTime="0:0:1" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:1.5" Value="0.7"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>

    <Grid>
        <!-- 背景效果 -->
        <Border Name="glowBorder" CornerRadius="20" Margin="20" Background="White">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Color="#005CB9" Opacity="0.7"/>
            </Border.Effect>
        </Border>

        <!-- 主内容区域 -->
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <!-- Logo和标题 -->
            <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Viewbox Width="130" Height="80">
                    <Image>
                        <Image.Source>
                            <BitmapImage UriSource="SY117x32.ico"/>
                        </Image.Source>
                    </Image>
                    
                </Viewbox>

                <TextBlock Text="Evalution Kit GUI" 
                           Foreground="#005CB9" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,10,0,0"
                           />

                <TextBlock Text="Input Program Name" 
                           Foreground="#005CB9" 
                           FontSize="20" 
                           HorizontalAlignment="Center" 
                           Margin="0,5,0,0"
                           FontWeight="SemiBold"/>
            </StackPanel>

            <!-- 进度条 -->
            <StackPanel Grid.Row="1" Margin="0,40,0,0">
                <!-- 进度条背景 -->
                <Border Height="8" CornerRadius="4" Background="#404040">
                    <Rectangle x:Name="ProgressBar" HorizontalAlignment="Left" 
                               Height="8" Fill="#005CB9" Width="0" RadiusX="4" RadiusY="4"/>
                </Border>

                <!-- 流动进度指示器 -->
                <Border Height="8" CornerRadius="4" Background="Transparent" Margin="0,-8,0,0">
                    <Rectangle x:Name="ProgressIndicator" Fill="#995A8DEE" RadiusX="4" RadiusY="4">
                        <Rectangle.OpacityMask>
                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                <GradientStop Color="Transparent" Offset="0"/>
                                <GradientStop Color="White" Offset="0.4"/>
                                <GradientStop Color="White" Offset="0.6"/>
                                <GradientStop Color="Transparent" Offset="1"/>
                            </LinearGradientBrush>
                        </Rectangle.OpacityMask>
                    </Rectangle>
                </Border>

                <TextBlock x:Name="ProgressText" Text="Initializing..." 
                           Foreground="#A0A0A0" 
                           HorizontalAlignment="Center" 
                           Margin="0,10,0,0"/>
            </StackPanel>

            <!-- 版权信息 -->
            <TextBlock Grid.Row="2" Text="© 2025 Silergy Corp. All Rights Reserved." 
                       Foreground="#606060" 
                       HorizontalAlignment="Center" 
                       Margin="0,20,0,10"/>
        </Grid>

        <!-- 关闭按钮 -->
        <Button x:Name="CloseButton" Content="✕" 
                Width="30" Height="30" 
                HorizontalAlignment="Right" VerticalAlignment="Top" 
                Margin="0,10,10,0" 
                Background="Transparent" Foreground="#CCC" BorderBrush="Transparent"
                Click="CloseButton_Click"
                ToolTip="Close splash screen"/>
    </Grid>
</Window>