<Window x:Class="SplashScreenApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SplashScreenApp"
        mc:Ignorable="d"
        Title="Main Application" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Border Grid.Row="0" Background="#FF2D2D30" Height="40">
            <Grid>
                <TextBlock Text="Main Application" 
                           Foreground="White" 
                           VerticalAlignment="Center" 
                           Margin="20,0,0,0"
                           FontSize="16"/>
            </Grid>
        </Border>

        <!-- 主内容区域 -->
        <Border Grid.Row="1" Background="#FF1E1E1E">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Welcome to the Application" 
                           Foreground="White" 
                           FontSize="24"
                           Margin="0,0,0,20"/>

                <Button Content="Get Started" 
                        Width="200" Height="40"
                        Background="#005CB9"
                        Foreground="White"
                        FontSize="16"
                        BorderBrush="Transparent"
                        Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>