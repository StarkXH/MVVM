<Application x:Class="SplashScreenApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Startup="App_OnStartup">
    <Application.Resources>
        <!-- 全局样式 -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3FFFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 文本发光效果 -->
        <DropShadowEffect x:Key="TextGlowEffect" BlurRadius="8" ShadowDepth="0" Color="#005CB9" Opacity="0.7"/>

        <!-- 渐变画笔 -->
        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#005CB9" Offset="0"/>
            <GradientStop Color="#FF8A2BE2" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF1A1A2E" Offset="0"/>
            <GradientStop Color="#FF16213E" Offset="1"/>
        </LinearGradientBrush>
    </Application.Resources>
</Application>